{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
